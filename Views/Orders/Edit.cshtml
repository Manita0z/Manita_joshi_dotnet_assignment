@model manita_dotnet_assignment.Data.Order

<h2>Edit Order</h2>

<form method="post">
    <div class="form-group">
        <label for="CustomerName">Customer Name</label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName" required />
    </div>
    <div class="form-group">
        <label for="TotalAmount">Total Amount</label>
        <input type="number" class="form-control" id="TotalAmount" name="TotalAmount" value="@Model.TotalAmount" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
